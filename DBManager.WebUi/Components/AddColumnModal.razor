        @*         </div> *@
        @*     </label> *@
        @*     <ValidationMessage For="() => Database.Path"></ValidationMessage> *@
        @* </div> *@
    </EditForm>


</div>
<div class="modal-footer">
    <button class="button button-secondary" data-dismiss="modal" @onclick="Cancel">
        Cancel
    </button>
    <button class="button button-primary" @onclick="Create">
        Create
    </button>

</div>